{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "ES2021",
    "sourceMap": true,
    "allowJs": false,
    "outDir": "dist",
    "baseUrl": "."
  },
  "include": [
    "src",
    "node_modules/@types/node/buffer.d.ts",
    "node_modules/@types/node/buffer.d.ts"
  ],
  "exclude": ["node_modules", "dist"]
}
